@model BioGC.Models.ContactMessage
@{
    ViewData["Title"] = "Delete Message";
}

<h1 data-ar="حذف الرسالة" data-en="Delete Message">Delete Message</h1>
<hr />

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <span data-ar="تأكيد الحذف" data-en="Confirm Deletion">Confirm Deletion</span>
    </div>
    <div class="card-body">
        <h5 class="card-title" data-ar="هل أنت متأكد أنك تريد حذف هذه الرسالة؟" data-en="Are you sure you want to delete this message?">Are you sure you want to delete this message?</h5>
        <p class="text-danger" data-ar="لا يمكن التراجع عن هذا الإجراء." data-en="This action cannot be undone.">This action cannot be undone.</p>

        <div class="mt-4 p-3 bg-light rounded border">
            <dl class="row mb-0">
                <dt class="col-sm-3" data-ar="المرسل" data-en="From">From</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3" data-ar="البريد الإلكتروني" data-en="Email">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3" data-ar="التاريخ" data-en="Date">Date</dt>
                <dd class="col-sm-9">@Model.SubmittedAt.ToShortDateString()</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> <span data-ar="حذف" data-en="Delete">Delete</span></button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> <span data-ar="إلغاء" data-en="Cancel">Cancel</span></a>
        </form>
    </div>
</div>
