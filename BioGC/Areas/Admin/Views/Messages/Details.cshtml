@model BioGC.Models.ContactMessage
@{
    ViewData["Title"] = "Message Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 data-ar="تفاصيل الرسالة" data-en="Message Details">Message Details</h1>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i> <span data-ar="العودة للرسائل" data-en="Back to Messages">Back to Messages</span></a>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-envelope me-1"></i>
        <span data-ar="من" data-en="From">From</span>: @Model.FullName
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3" data-ar="البريد الإلكتروني" data-en="Email">Email</dt>
            <dd class="col-sm-9"><a href="mailto:@Model.Email">@Model.Email</a></dd>

            <dt class="col-sm-3" data-ar="التاريخ" data-en="Date">Date</dt>
            <dd class="col-sm-9">@Model.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd hh:mm tt")</dd>

            <dt class="col-sm-3" data-ar="صفحة المصدر" data-en="Source Page">Source Page</dt>
            <dd class="col-sm-9">@Model.SourcePage</dd>

            <dt class="col-sm-3" data-ar="فئة المنتج/الطلب" data-en="Product Category/Request">Product Category/Request</dt>
            <dd class="col-sm-9">@(Model.ProductCategory ?? "N/A")</dd>

            <hr class="my-3">

            <dt class="col-12" data-ar="محتوى الرسالة" data-en="Message Content">Message Content</dt>
            <dd class="col-12 mt-2">
                <div class="p-3 bg-light rounded" style="white-space: pre-wrap;">@Model.Message</div>
            </dd>
        </dl>
    </div>
</div>

