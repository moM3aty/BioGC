@model BioGC.Models.ShippingZone
@{
    ViewData["Title"] = "Delete Shipping Zone";
}

<h1 data-ar="حذف منطقة الشحن" data-en="Delete Shipping Zone">Delete Shipping Zone</h1>
<hr />

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <span data-ar="تأكيد الحذف" data-en="Confirm Deletion">Confirm Deletion</span>
    </div>
    <div class="card-body">
        <h5 class="card-title" data-ar="هل أنت متأكد أنك تريد حذف هذه المنطقة؟" data-en="Are you sure you want to delete this zone?">Are you sure you want to delete this zone?</h5>
        <p class="text-danger" data-ar="لا يمكن التراجع عن هذا الإجراء." data-en="This action cannot be undone.">This action cannot be undone.</p>

        <div class="mt-4">
            <dl class="row">
                <dt class="col-sm-3" data-ar="اسم المنطقة" data-en="Zone Name">Zone Name</dt>
                <dd class="col-sm-9">@Model.ZoneNameEn / @Model.ZoneNameAr</dd>

                <dt class="col-sm-3" data-ar="تكلفة الشحن" data-en="Shipping Cost">Shipping Cost</dt>
                <dd class="col-sm-9">$@Model.ShippingCost.ToString("F2")</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> <span data-ar="حذف" data-en="Delete">Delete</span></button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> <span data-ar="إلغاء" data-en="Cancel">Cancel</span></a>
        </form>
    </div>
</div>
