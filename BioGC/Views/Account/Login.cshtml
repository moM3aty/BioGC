@model BioGC.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BioCG - Login</title>
    <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
    <style>
                .tabs .tab-link {
                        flex: 1;
                        padding: 12px 50px;
                        border: none;
                        background: none;
                        font-weight: 700;
                        font-size: 1.1rem;
                        cursor: pointer;
                        border-radius: 10px;
                        transition: 0.3s;
                        color: #25ccff;
                        text-decoration: none;
                        display: inline-block;

        }
                    .tabs .tab-link:hover {
                            color: #13515b;
                            background: #d1d9e6;
                            box-shadow: inset 2px 2px 5px #bec4cb, inset -2px -2px 5px #f0f5fa;

        }

    </style>
</head>
<body>
    <section class="auth py-5">
        <div class="container">
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <a data-ar="العوده الي الرئيسية" data-en="Back To Home" class="btn btn-back-to-home" asp-controller="Home" asp-action="Index">Back To Home</a>
                </div>
                <button class="btn btn-outline-light translate-btn btn-sm me-2" id="langToggle">العربية</button>
            </div>
            <div class="row g-4 justify-content-center align-items-center">
                <div class="col-lg-6">
                    <div class="login-card shadow shadow-sm">
                        <div class="tabs d-flex flex-wrap gap-4 justify-content-center mb-5">
                            <div><button class="active" data-ar="تسجيل الدخول" data-en="Login">Login</button></div>
                            <div><a asp-action="Register" class="tab-link" data-ar="انشاء حساب" data-en="Create Account">Create Account</a></div>
                        </div>

                        <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            <div class="heading text-center mb-4">
                                <h2 data-ar="صفحة تسجيل الدخول" data-en="Login Page">Login Page</h2>
                                <p class="description" data-ar="الرجاء إدخال تفاصيل تسجيل الدخول الخاصة بك للوصول إلى حسابك." data-en="Please enter your login details to access your account.">Please enter your login details to access your account.</p>
                            </div>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="UserName" data-ar="اسم المستخدم" data-en="UserName"></label>
                                    <input asp-for="UserName" class="w-100" placeholder="enter your username" data-en-placeholder="enter your username" data-ar-placeholder="ادخل اسم المستخدم">
                                    <span asp-validation-for="UserName" class="text-danger small d-block mt-1"></span>
                                </div>
                                <div class="col-12">
                                    <div class="password-field position-relative">
                                        <label asp-for="Password" data-ar="الرقم السري" data-en="Password"></label>
                                        <input asp-for="Password" class="w-100" id="loginPassword" placeholder="enter your password" data-en-placeholder="enter your password" data-ar-placeholder="ادخل الرقم السري">
                                        <i class="fas fa-eye toggle-password" data-input="loginPassword"></i>
                                        <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-login w-100 mt-3" data-ar="تسجيل الدخول" data-en="Login">Login</button>
                                </div>
                                <div class="col-12 text-center mt-3">
                                    <a class="create-account" asp-action="Register" data-ar="ليس لديك حساب؟ إنشاء حساب" data-en="Don't have an account? Create one">Don't have an account? Create one</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/account.js"></script>
</body>
</html>