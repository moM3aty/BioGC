    <section class="contact">
        <div class="container">
            <div class="row about-container">
                <div class="col-lg-6">
                    <div class="about-box p-4 text-white">
                    </div>
                </div>
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="contact-form  px-4 py-5">
                        <h2 class="mb-5 text-center" data-en="Cosmetics Consultation" data-ar="استشارة مستحضرات التجميل">Cosmetics Consultation</h2>
                        <form class="consultation-form" data-service="cosmetics">
                            <div class="row g-4">
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Full Name" data-ar="الاسم الكامل">Full Name</label>
                                    <input type="text" class="form-control mb-2" name="name" data-en="Enter your full name" data-ar="أدخل اسمك الكامل" placeholder="Enter your full name">
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Email Address" data-ar="البريد الإلكتروني">Email Address</label>
                                    <input type="email" class="form-control mb-2" name="email" data-en="Enter your email" data-ar="أدخل بريدك الإلكتروني" placeholder="Enter your email">
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Product Interest" data-ar="الاهتمام بالمنتج">Product Interest</label>
                                    <select class="form-select mb-2" name="request">
                                        <option value="" data-en="Select product category" data-ar="اختر فئة المنتج">Select product category</option>
                                        <option value="luxury-skincare" data-en="Luxury Skincare" data-ar="العناية الفاخرة بالبشرة">Luxury Skincare</option>
                                        <option value="premium-makeup" data-en="Premium Makeup" data-ar="المكياج الفاخر">Premium Makeup</option>
                                        <option value="natural-organic" data-en="Natural & Organic" data-ar="طبيعي وعضوي">Natural & Organic</option>
                                        <option value="sun-protection" data-en="Sun Protection" data-ar="الحماية من الشمس">Sun Protection</option>
                                        <option value="mens-grooming" data-en="Men's Grooming" data-ar="العناية الرجالية">Men's Grooming</option>
                                        <option value="custom-formulations" data-en="Custom Formulations" data-ar="التركيبات المخصصة">Custom Formulations</option>
                                        <option value="wholesale-inquiry" data-en="Wholesale Inquiry" data-ar="استفسار الجملة">Wholesale Inquiry</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Requirements" data-ar="المتطلبات">Requirements</label>
                                    <textarea class="form-control mb-2" name="message" rows="4" data-en="Tell us about your cosmetic needs and preferences..." data-ar="أخبرنا عن احتياجاتك وتفضيلاتك في مستحضرات التجميل..." placeholder="Tell us about your cosmetic needs and preferences..."></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fab fa-whatsapp me-2"></i>
                                        <span data-en="Send to WhatsApp" data-ar="إرسال عبر واتساب">Send to WhatsApp</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
