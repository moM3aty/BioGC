@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const filterSelect = document.getElementById('home-filter-select');
            const productsGrid = document.getElementById('featured-products-grid');

            if (filterSelect && productsGrid) {
                filterSelect.addEventListener('change', function () {
                    const sortByValue = this.value;

                    // Show a simple loading indicator
                    productsGrid.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>`;

                    // Fetch the filtered products
                    fetch(`/Home/_GetFilteredProducts?sortBy=${sortByValue}`)
                        .then(response => response.text())
                        .then(html => {
                            productsGrid.innerHTML = html;
                            // Re-apply language translation to the new content
                            if (typeof translatePageContent === 'function') {
                                const lang = document.documentElement.lang || 'en';
                                translatePageContent(lang);
                            }
                            // Re-initialize favorite buttons for the new content
                            if (typeof initializeFavoriteButtonsState === 'function') {
                                initializeFavoriteButtonsState();
                            }
                        })
                        .catch(error => {
                            console.error('Error fetching filtered products:', error);
                            productsGrid.innerHTML = '<div class="col-12"><p class="text-danger text-center">Failed to load products.</p></div>';
                        });
                });
            }
        });
    </script>
}
