    <section class="contact">
        <div class="container">
            <div class="row about-container">
                <div class="col-lg-6">
                    <div class="about-box p-4 text-white">
                    </div>
                </div>
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="contact-form  px-4 py-5">
                        <h2 class="mb-5 text-center" data-en="Request Engineering Consultation or Design" data-ar="طلب استشارة هندسية أو تصميم">Request Engineering Consultation or Design</h2>
                        <form class="consultation-form" data-service="engineering">
                            <div class="row g-4">
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Full Name" data-ar="الاسم الكامل">Full Name</label>
                                    <input type="text" class="form-control mb-2" name="name" data-ar="أدخل اسمك الكامل" placeholder="Enter your full name" data-en="Enter your full name">
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Email Address" data-ar="البريد الإلكتروني">Email Address</label>
                                    <input type="email" class="form-control mb-2" name="email" data-en="Enter your email" data-ar="أدخل بريدك الإلكتروني" placeholder="Enter your email">
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Type of Request" data-ar="نوع الطلب">Type of Request</label>
                                    <select class="form-select mb-2" name="request">
                                        <option value="" data-en="Select service type" data-ar="اختر نوع الخدمة">Select service type</option>
                                        <option value="structural-design" data-en="Structural Design" data-ar="التصميم الإنشائي">Structural Design</option>
                                        <option value="architectural-design" data-en="Architectural Design" data-ar="التصميم المعماري">Architectural Design</option>
                                        <option value="project-management" data-en="Project Management" data-ar="إدارة المشاريع">Project Management</option>
                                        <option value="infrastructure" data-en="Infrastructure Development" data-ar="تطوير البنية التحتية">Infrastructure Development</option>
                                        <option value="marine-engineering" data-en="Marine Engineering" data-ar="الهندسة البحرية">Marine Engineering</option>
                                        <option value="educational-facilities" data-en="Educational Facilities" data-ar="المرافق التعليمية">Educational Facilities</option>
                                        <option value="consultation" data-en="General Consultation" data-ar="استشارة عامة">General Consultation</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Project Details" data-ar="تفاصيل المشروع">Project Details</label>
                                    <textarea class="form-control mb-2" name="message" rows="4" data-en="Describe your project requirements..." data-ar="اوصف متطلبات مشروعك..." placeholder="Describe your project requirements..."></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-msg btn-lg w-100">
                                        <i class="fab fa-whatsapp me-2"></i>
                                        <span data-en="Send to WhatsApp" data-ar="إرسال عبر واتساب">Send to WhatsApp</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
