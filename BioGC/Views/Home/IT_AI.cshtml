    <section class="contact">
        <div class="container">
            <div class="row about-container">
                <div class="col-lg-6">
                    <div class="about-box p-4 text-white">
                    </div>
                </div>
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="contact-form  px-4 py-5">
                        <h2 class="mb-5 text-center" data-en="Request AI/IT Solutions" data-ar="طلب حلول الذكاء الاصطناعي/تكنولوجيا المعلومات">Request AI/IT Solutions</h2>
                        <form class="consultation-form" data-service="engineering">
                            <div class="row g-4">
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Full Name" data-ar="الاسم الكامل">Full Name</label>
                                    <input type="text" class="form-control mb-2" name="name" data-en="Enter your full name" data-ar="أدخل اسمك الكامل" placeholder="Enter your full name">
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Email Address" data-ar="البريد الإلكتروني">Email Address</label>
                                    <input type="email" class="form-control mb-2" name="email" data-en="Enter your email" data-ar="أدخل بريدك الإلكتروني" placeholder="Enter your email">
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Technology Interest" data-ar="الاهتمام التكنولوجي">Technology Interest</label>
                                    <select class="form-select  mb-2" name="request">
                                        <option value="" data-en="Select technology solution" data-ar="اختر الحل التكنولوجي">Select technology solution</option>
                                        <option value="ai-design" data-en="AI-Powered Design" data-ar="التصميم المدعوم بالذكاء الاصطناعي">AI-Powered Design</option>
                                        <option value="smart-buildings" data-en="Smart Building Systems" data-ar="أنظمة البناء الذكية">Smart Building Systems</option>
                                        <option value="data-analytics" data-en="Data Analytics Platform" data-ar="منصة تحليل البيانات">Data Analytics Platform</option>
                                        <option value="construction-automation" data-en="Construction Automation" data-ar="أتمتة البناء">Construction Automation</option>
                                        <option value="cloud-infrastructure" data-en="Cloud Infrastructure" data-ar="البنية التحتية السحابية">Cloud Infrastructure</option>
                                        <option value="cybersecurity" data-en="Cybersecurity Solutions" data-ar="حلول الأمن السيبراني">Cybersecurity Solutions</option>
                                        <option value="custom-solution" data-en="Custom Technology Solution" data-ar="حل تكنولوجي مخصص">Custom Technology Solution</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label mb-2" data-en="Project Requirements" data-ar="متطلبات المشروع">Project Requirements</label>
                                    <textarea class="form-control  mb-2" name="message" rows="4" data-en="Describe your technology needs and project goals..." data-ar="اوصف احتياجاتك التكنولوجية وأهداف مشروعك..." placeholder="Describe your technology needs and project goals..."></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-msg btn-lg w-100">
                                        <i class="fab fa-whatsapp me-2"></i>
                                        <span data-en="Send to WhatsApp" data-ar="إرسال عبر واتساب">Send to WhatsApp</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
