@model BioGC.Models.Product
@{
    ViewData["Title"] = "Relaxation Content Offer";
}

<style>
    .offer-header {
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.5)), url('/images/courses-bg.jpg');
        background-size: cover;
        background-position: center;
        padding: 120px 0;
        color: white;
    }

    .offer-features li {
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
    }
</style>

<div class="offer-header text-center">
    <div class="container">
        <h1 class="display-4 fw-bold" data-ar="افتح عالمًا من الهدوء" data-en="Unlock a World of Calm">Unlock a World of Calm</h1>
        <p class="lead" data-ar="احصل على وصول دائم لمكتبتنا الحصرية من فيديوهات وصوتيات الاسترخاء المصممة لراحتك." data-en="Get lifetime access to our exclusive library of relaxation videos and audio, designed for your well-being.">
            Get lifetime access to our exclusive library of relaxation videos and audio, designed for your well-being.
        </p>
    </div>
</div>

<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h2 data-ar="ماذا ستحصل عليه؟" data-en="What You'll Get">What You'll Get</h2>
                <ul class="list-unstyled offer-features mt-4">
                    <li><i class="fas fa-check-circle text-success me-2"></i> <span data-ar="وصول دائم لمحتوى الفيديو" data-en="Lifetime access to video content">Lifetime access to video content</span></li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> <span data-ar="مكتبة صوتية حصرية" data-en="Exclusive audio library for meditation">Exclusive audio library for meditation</span></li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> <span data-ar="تحديثات ومحتوى جديد بانتظام" data-en="Regular updates with new content">Regular updates with new content</span></li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> <span data-ar="مشاهدة من أي جهاز" data-en="Watch from any device, anytime">Watch from any device, anytime</span></li>
                </ul>
            </div>
            <div class="col-lg-5">
                <div class="card shadow-lg text-center p-4">
                    <div class="card-body">
                        <h3 class="card-title" data-ar="وصول دائم" data-en="Lifetime Access">Lifetime Access</h3>
                        <!-- DYNAMIC PRICE -->
                        <p class="display-5 fw-bold my-3">$@Model.PriceAfterDiscount.ToString("F2")</p>
                        <p class="text-muted" data-ar="دفعة واحدة فقط." data-en="One-time payment.">One-time payment.</p>
                        <div class="d-grid">
                            <!-- DYNAMIC PRODUCT ID -->
                            <a asp-controller="Checkout" asp-action="Service" asp-route-productId="@Model.Id" class="btn btn-primary btn-lg">
                                <span data-ar="اشترِ الآن" data-en="Buy Now">Buy Now</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
